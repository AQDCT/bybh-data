{% extends "::base.html.twig" %}

{% block title %}All Available Studies{% endblock %}

{% block content %}
<h1>All studies</h1>

{% for item in studies|slice(0, 2) %}
  <div class="panel panel-default"><div class="panel-heading"><h3 class="panel-title"><a href='{{ path('singlestudy', {'name': item.name}) }}'>{{ item.name }}</a></h3></div><div class="panel-body">{{item.description | truncate(250) | raw}}</div></div>
{% endfor %}

{% endblock %}
